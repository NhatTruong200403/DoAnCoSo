@using DoAnCNTT.Models
@using Microsoft.AspNetCore.Identity
@using System.Globalization
@model DoAnCNTT.Models.CarType
@inject UserManager<ApplicationUser> _userManager

@{
    ViewData["Title"] = "Create";
    string id = (string)ViewData["Id"];
    int? nullableIdc = ViewData["IdC"] as int?;
    int idc = nullableIdc ?? 0;
}



<h1>Create</h1>

<h4>CarType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" value="@idc" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="CreatedById" class="control-label"></label>
                <input asp-for="CreatedById" value="@id" class="form-control" readonly />
                <span asp-validation-for="CreatedById" class="text-danger"></span>
            </div>
            
            <div class="form-group" style="display: none;">
                <label asp-for="CreatedOn" class="control-label"></label>
                @{
                    DateTime dateTime = DateTime.Now;
                    string formattedDate = dateTime.ToString("yyyy-MM-ddTHH:mm:ss", CultureInfo.InvariantCulture);
                    // ViewData["FormattedDate"] = formattedDate;
                }
                <input asp-for="CreatedOn" value="@formattedDate" class="form-control" readonly />

                <span asp-validation-for="CreatedOn" class="text-danger"></span>
            </div>

            @*    <div class="form-group" >
            <label asp-for="ModifiedById" class="control-label"></label>
            <input asp-for="ModifiedById" class="form-control" readonly />
            <span asp-validation-for="ModifiedById" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="ModifiedOn" class="control-label"></label>
            <input asp-for="ModifiedOn" class="form-control" readonly />
            <span asp-validation-for="ModifiedOn" class="text-danger"></span>
            </div> *@
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

